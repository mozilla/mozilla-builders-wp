{% if posts|length %}
<ul class="px-grid-site-margin centered-page">
  {% for post in posts %}
    <li class="col-span-full grid grid-cols-site gap-x-grid-site-gutter gap-y-2 py-4 relative border-t border-content">
      <div class="col-span-full md:col-span-5 order-1">
        <h3 class="text-sm font-semibold uppercase leading-tight">
          <a class="before:absolute before:inset-0 before:z-10 group" href="{{ post.link }}">
            <span class="inline group-hover:bg-action-focus group-focus:bg-action-focus group-hover:text-action-focus-reverse group-focus:text-action-focus-reverse">{{ post.title }}</span>
          </a>
        </h3>
      </div>

      <div class="col-span-full md:col-span-5 order-2 {{ not post.subtitle ? 'hidden md:block' }}">
        {% if post.subtitle %}
          <p class="text-sm">{{ post.subtitle }}</p>
        {% endif %}
      </div>

      <div class="col-span-full md:col-span-9 order-3 max-md:order-5 max-md:mt-1 md:w-2/4 {{ not post.thumbnail ? 'hidden md:block' }}">
        {% if post.thumbnail and post.show_image_on_index %}
          {% include 'templates/components/lazy-img.twig' with { img: post.thumbnail } %}
        {% endif %}
      </div>

      <div class="col-span-full md:col-span-3 order-4 max-md:order-3">
        <p class="text-sm">
          {% include 'components/articles/byline_format.twig' with { bylines: post.authors } %}
        </p>
      </div>

      <div class="col-span-full md:col-span-2 order-5 max-md:-order-1">
        <div class="mt-1 max-md:mb-1 flex md:justify-end relative z-20">
          {% include "components/articles/overline.twig" with { overline: post.categories[0] } %}
        </div>
      </div>
    </li>
  {% endfor %}
</ul>
{% endif %}
