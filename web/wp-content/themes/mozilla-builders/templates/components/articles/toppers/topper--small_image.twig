{% if article.thumbnail.id %}
  {% set asset = Image(article.thumbnail.id) %}
{% endif %}

<div class="flex flex-col p-site gap-4">
  <div class="flex w-full justify-center items-end gap-site max-md:flex-col max-md:items-center max-md:gap-10">
    <div class="flex flex-1 items-start max-md:order-2">
      <div class="flex flex-col items-center gap-6 max-md:gap-4">
        <div class="flex w-[65%] justify-end max-md:justify-center">
          {% include 'components/articles/overline.twig' with { overline: article.categories[0] } %}
        </div>

        <h1 class="type-slab-3xl text-pretty text-center">{{ article.title }}</h1>
      </div>
    </div>

    <div class="flex w-1/3 max-w-md justify-center max-md:order-1 max-md:w-2/3 max-md:max-w-xs">
      {% if asset %}
        {% include 'components/lazy-img.twig' with {
          img: asset,
          class: 'w-full',
        } %}
      {% else %}
        <div class="flex w-full aspect-square bg-gray"></div>
      {% endif %}
    </div>
  </div>

  {% if article.subtitle %}
    <p class="type-sans-xl uppercase text-pretty text-left">
      {{ article.subtitle }}
    </p>
  {% endif %}
</div>

