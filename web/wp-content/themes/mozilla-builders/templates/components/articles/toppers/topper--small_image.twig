{% if article.thumbnail.id %}
  {% set asset = Image(article.thumbnail.id) %}
{% endif %}

<div class="flex flex-col pt-10 gap-8">
  <div class="w-full grid grid-site max-md:flex-col max-md:items-center max-md:gap-8">
    <div class="flex items-end col-span-full md:col-span-2/3 max-md:order-2">
      <div class="flex flex-col items-center gap-6 max-md:gap-4">
        <div class="flex w-[65%] justify-center">
          {% include 'components/articles/overline.twig' with { overline: article.categories[0] } %}
        </div>

        <h1 class="type-slab-3xl text-pretty text-center">{{ article.title }}</h1>
      </div>
    </div>

    <div class="flex col-span-full md:col-span-1/3 max-md:order-1">
      <div class="w-full mx-auto max-md:max-w-xs">
        {% if asset %}
          {% include 'components/lazy-img.twig' with {
            img: asset,
            class: 'w-full',
          } %}
        {% else %}
          <div class="flex w-full aspect-square bg-gray"></div>
        {% endif %}
      </div>
    </div>
  </div>

  {% if article.subtitle %}
    <div class="grid grid-site">
      <p class="col-span-full type-sans-xl text-pretty text-left">
        {{ article.subtitle }}
      </p>
    </div>
  {% endif %}
</div>

