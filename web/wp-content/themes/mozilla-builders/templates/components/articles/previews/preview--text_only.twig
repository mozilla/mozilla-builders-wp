{% if post.color == 'green' %}
  {% set bg_class = 'bg-green' %}
{% elseif post.color == 'orange' %}
  {% set bg_class = 'bg-orange' %}
{% elseif post.color == 'yellow' %}
  {% set bg_class = 'bg-yellow' %}
{% elseif post.color == 'purple' %}
  {% set bg_class = 'bg-purple' %}
{% elseif post.color == 'pink' %}
  {% set bg_class = 'bg-pink' %}
{% else %}
  {% set bg_class = 'bg-content text-main' %}
{% endif %}

<div class="relative {{ bg_class }} p-4 min-h-96 flex-1 flex flex-col justify-between items-center">
  <h3 class="type-headline-lg text-center text-balance leading-tighter">
    <a class="before:absolute before:inset-0 before:z-10" href="{{ post.link }}">{{ post.title }}</a>
  </h3>

  <div class="relative z-20">
    {% include 'components/articles/overline.twig' with { overline: post.categories[0], color: post.color } %}
  </div>

  <p class="type-sans-sm text-center text-balance">{{ post.subtitle }}</p>
</div
