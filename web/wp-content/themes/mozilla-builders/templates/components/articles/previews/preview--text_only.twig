<div class="relative bg-green p-4 min-h-96 flex-1 flex flex-col justify-between items-center">
  <h3 class="type-slab-lg text-center leading-tighter">
    <a class="before:absolute before:inset-0 before:z-10" href="{{ post.link }}">{{ post.title }}</a>
  </h3>

  <div class="relative z-20">
    {% include 'components/articles/overline.twig' with { overline: post.categories[0], color: post.color } %}
  </div>

  <p class="type-sans-sm text-center">{{ post.subtitle }}</p>
</div
