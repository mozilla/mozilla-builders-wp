{% extends "layouts/base.twig" %}

{%- block custom_body_classes -%}
  {{ article.is_light_nav ? 'light-nav' }}
{%- endblock -%}

{%- block custom_content_classes -%}
  basic-page
{%- endblock -%}

{% block pageBody %}

  <article class="gutenberg-layout basic-page__body">
    <header>
      <h1>
        <span>{{ post.meta('first_name') }}</span>
        <span>{{ post.meta('last_name') }}</span>
      </h1>

      {% if post.thumbnail %}
        <img src="{{ post.thumbnail.src('full') }}" alt="{{ post.thumbnail.alt }}">
      {% endif %}

      <dl>
        {% if post.meta('github_username') %}
          <dt>GitHub</dt>
          <dd><a href="https://github.com/{{ post.meta('github_username') }}">[{{ post.meta('github_username') }}]</a></dd>
        {% endif %}

        {% if post.contacts %}
          <dt>Contact</dt>
          <dd>
            {% for item in post.contacts %}
              <a href="{{ item.link }}">[{{ item.label }}]</a>
            {% endfor %}
          </dd>
        {% endif %}

      </dl>

    </header>

    <div class="gutenberg-content basic-page__body-width js-hang-punc">
      {{ post.about }}
    </div>
  </article>

{% endblock %}
