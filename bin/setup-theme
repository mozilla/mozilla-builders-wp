#!/bin/bash

echo "Activating your WordPress theme..."
echo
./bin/wp theme activate "mozilla-builders"
echo

echo "Updating site name..."
echo
./bin/wp option update blogname "Mozilla Builders"
echo

echo "Updating seed database URLs..."
echo
./bin/wp search-replace wsk.ups.dock mozilla-builders.ups.dock
echo

echo "Exporting updated seed database..."
echo
./bin/export-db
echo
