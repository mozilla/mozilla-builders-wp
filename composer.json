{
  "name": "upstatement/mozilla-builders",
  "authors": [
    {
      "name": "Upstatement",
      "email": "tech@upstatement.com"
    }
  ],
  "description": "Theme for Mozilla Builders",
  "license": "proprietary",
  "repositories": [
    {
      "type": "composer",
      "url": "https://wpackagist.org"
    },
    {
      "type": "composer",
      "url": "https://connect.advancedcustomfields.com"
    }
  ],
  "extra": {
    "installer-paths": {
      "web/wp-content/plugins/{$name}/": [
        "wpackagist-plugin/*",
        "type:wordpress-plugin"
      ]
    }
  },
  "config": {
    "optimize-autoloader": true,
    "platform": {
      "php": "8.0"
    },
    "allow-plugins": {
      "composer/installers": true,
      "dealerdirect/phpcodesniffer-composer-installer": true
    },
    "vendor-dir": "web/wp-content/themes/mozilla-builders/vendor"
  },
  "autoload": {
    "psr-4": {
      "MozillaBuilders\\": "web/wp-content/themes/mozilla-builders/src"
    }
  },
  "require": {
    "wpackagist-plugin/wp-environment-indicator": "^1.0",
    "vlucas/phpdotenv": "^5.4",
    "timber/timber": "^1.22",
    "wpengine/advanced-custom-fields-pro": "^6.2"
  },
  "require-dev": {
    "squizlabs/php_codesniffer": "^3.6",
    "friendsofphp/php-cs-fixer": "^3.3",
    "symfony/var-dumper": "^4.4",
    "dealerdirect/phpcodesniffer-composer-installer": "^0.7",
    "wp-coding-standards/wpcs": "^2.3",
    "phpcompatibility/phpcompatibility-wp": "^2.1",
    "szepeviktor/phpstan-wordpress": "^1.3",
    "php-stubs/acf-pro-stubs": "^5.10",
    "php-stubs/wordpress-stubs": "^6.6"
  },
  "scripts": {
    "static-tests": [
      "find web/wp-content/themes/mozilla-builders -path 'web/wp-content/themes/mozilla-builders/vendor' -prune -o -name '*.php' -exec php -l {} \\;",
      "./web/wp-content/themes/mozilla-builders/vendor/bin/phpcs --runtime-set ignore_warnings_on_exit true --standard=phpcs.xml.dist --colors --ignore=node_modules,vendor --error-severity=1 --warning-severity=8 web/wp-content/themes/mozilla-builders",
      "./web/wp-content/themes/mozilla-builders/vendor/bin/phpstan analyse -l 5 --memory-limit=2G"
    ],
    "fix": [
      "./web/wp-content/themes/mozilla-builders/vendor/bin/phpcbf --standard=phpcs.xml.dist --colors --ignore=node_modules,vendor web/wp-content/themes/mozilla-builders"
    ]
  }
}
