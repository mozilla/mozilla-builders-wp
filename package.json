{
  "name": "@upstatement/mozilla-builders",
  "version": "0.0.3",
  "description": "Theme for Mozilla Builders",
  "author": "Upstatement",
  "repository": "",
  "license": "ISC",
  "testing": {
    "urls": {
      "local": "http://mozilla-builders.ups.dock",
      "staging": "",
      "production": ""
    },
    "accessibility": {
      "compliance": "Section508",
      "paths": [
        "/"
      ],
      "ignore": {
        "codes": [
          "notice"
        ],
        "selectors": [
          "#wpadminbar"
        ]
      }
    }
  },
  "bundlesize": [
    {
      "path": "web/wp-content/themes/mozilla-builders/dist/static/app.js",
      "maxSize": "10 kB"
    },
    {
      "path": "web/wp-content/themes/mozilla-builders/dist/static/vendor.js",
      "maxSize": "110 kB"
    }
  ],
  "browserslist": [
    "> 1%",
    "last 2 versions"
  ],
  "scripts": {
    "setup": "./bin/setup",
    "start": "./bin/start",
    "lint:js": "eslint --color --no-error-on-unmatched-pattern --format stylish web/wp-content/themes/**/*.js",
    "lint:php": "composer static-tests",
    "fix:php": "composer fix",
    "fix:js": "eslint --fix web/wp-content/themes/**/*.js",
    "test:bundlesize": "bundlesize",
    "test:a11y": "node tests/pa11y.js",
    "prepare": "husky install",
    "lint-staged": "lint-staged",
    "postinstall": "npm install --prefix web/wp-content/themes/mozilla-builders"
  },
  "lint-staged": {
    "*.{js,scss,json,md}": [
      "prettier --write"
    ],
    "*.js": [
      "eslint --fix"
    ]
  },
  "devDependencies": {
    "bundlesize": "^0.18.1",
    "eslint": "^7.26.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-react": "^7.27.1",
    "husky": "^8.0.3",
    "lint-staged": "^14.0.1",
    "lodash.get": "^4.4.2",
    "pa11y": "^6.2.3",
    "prettier": "^2.3.0"
  }
}
